/* pages/product_detail/detail.wxss */
page {
  background: #f1f1f1;
}
.detail_top {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fixed_box {
  position: fixed;
  top: 50rpx;
  right: 20rpx;
  /* background: red; */
}
.fixed_box .iconfont {
  font-size: 60rpx;
}
.num {
  display: block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
  background: #ab9564;
  border-radius: 50%;
  position: absolute;
  top: -20rpx;
  left: -20rpx;
}
.imgSrc {
  width: 70%;
}
.box {
  width: 80%;
  height: 80rpx;
  border-radius: 80rpx;
  background: #ab9564;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
}
.num_box view,
.cart_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.num_box,
.cart_box {
  width: 45%;
}
.line {
  width: 2rpx;
  height: 40rpx;
  border-right: 1px dotted #333;
}
.flyImg {
  width: 100rpx;
  height: 100rpx;
  opacity: 0;
}
.flyImg.fly {
  opacity: 1;
  transition: 600ms cubic-bezier(0.31, 1.05, 0.74, 1.39);
}

.detail_bottom {
  background: #fff;
  margin-top: 30rpx;
}
.btnList {
  display: flex;
  height: 80rpx;
  align-items: center;
  border-bottom: 1rpx solid #666;
  margin-bottom: 20rpx;
}
.btn {
  flex: 1;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1px solid transparent;
}
.btn.active {
  color: #ab9564;
  border-bottom-color: #ab9564;
}

.product_detail image {
  width: 100%;
  display: block;
}
.product_props text {
  padding-left: 30rpx;
}
.product_save {
  text-align: center;
}

.animate {
  animation: scale 200ms linear 1;
}
@keyframes scale {
  0% {
    font-size: 80rpx;
  }
  100% {
    font-size: 60rpx;
  }
}

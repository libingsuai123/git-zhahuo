/**index.wxss**/
.swiper {
  width: 100vw;
  height: 400rpx;
}
.swiper image {
  width: 100%;
  height: 100%;
}
.title {
  width: 100vw;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #ab9564;
  margin: 30rpx 0;
}
.theme_container {
  display: flex;
  flex-wrap: wrap;
}
.topic_img {
  width: 50%;
  height: 400rpx;
}
.topic_img:nth-child(1) {
  box-sizing: border-box;
  border-right: 1px solid #fff;
}
.topic_img:nth-child(3) {
  width: 100%;
  border-top: 1px solid #fff;
}

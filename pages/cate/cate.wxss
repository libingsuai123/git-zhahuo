/* pages/cate/cate.wxss */
.cate_container {
  width: 100vw;
  height: 100vh;
  display: flex;
}
.cate_left {
  flex-basis: 200rpx;
  border-right: 1rpx solid #ccc;
}
.cate {
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  border-left: 2px solid transparent;
}
.cate.active {
  border-left-color: #ab9564;
  color: #ab9564;
}
.cate_right {
  flex: 1;
  padding: 30rpx;
}
.headImg {
  width: 100%;
  height: 300rpx;
}
.name1 {
  margin: 30rpx auto;
  color: #ab9564;
  display: flex;
  align-items: center;
  justify-content: center;
}
.name1::before,
.name1::after {
  content: "";
  display: block;
  width: 80rpx;
  height: 1rpx;
  background: red;
  margin: 20rpx;
}
.product_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
c-product {
  width: 30%;
}
.img {
  width: 180rpx;
  height: 180rpx;
}
.name {
  font-size: 24rpx;
  text-align: center;
}
.product_list::after {
  content: "";
  display: block;
  width: 30%;
}
